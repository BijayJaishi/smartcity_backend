<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#fff"
        android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="5dp">

                <ImageView

                    android:clickable="true"
                    android:layout_marginTop="0dp"
                    android:id="@+id/eleitem_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_image_black_24dp" />

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


                <TextView
                    android:fontFamily="@font/aclonica"
                    android:layout_marginTop="5dp"
                    android:id="@+id/eleitem_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Element Name"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
                <TextView
                    android:fontFamily="@font/aclonica"
                    android:id="@+id/eleitem_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Element Address"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:fontFamily="@font/aclonica"
                    android:id="@+id/eleitem_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Element Phone"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:fontFamily="@font/aclonica"
                    android:id="@+id/eleitem_open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="opening Hour "
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:fontFamily="@font/aclonica"
                    android:id="@+id/eleitem_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Closing Hour"
                    android:textColor="@android:color/black"
                     />

            <TextView
                android:fontFamily="@font/aclonica"
                android:id="@+id/eleitem_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@android:color/black"
                />

                <TextView
                    android:fontFamily="@font/aclonica"
                    android:id="@+id/eleitem_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="ID"
                    android:textSize="12sp" />


        </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_marginTop="160dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/eleedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="10dp"

                android:text="Add" />

            <Button
                android:id="@+id/eledelete"
                android:layout_marginLeft="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Delete" />


        </LinearLayout>


    </android.support.v7.widget.CardView>

</android.support.v7.widget.CardView>